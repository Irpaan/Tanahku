<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Profile">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipseprofile"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Sun Flower"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="220dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Richard@example.com"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"/>



    <LinearLayout android:gravity="start"
        android:id="@+id/linearHalamanProfil"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout android:id="@+id/linearRowarrowright"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="320dp"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearRowedit"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="11dp"
                android:layout_weight="0.95"
                android:layout_width="0dp" android:orientation="horizontal">
                <ImageView android:id="@+id/imageEdit"
                    android:layout_height="18dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="19dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_edit"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_edit"/>

                <TextView
                    android:id="@+id/txtEditProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="0.82"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="true"
                    android:text="Edit Profile"
                    tools:ignore="NestedWeights,TextSizeCheck" />
            </LinearLayout>
            <ImageView android:id="@+id/imageArrowright"
                android:layout_height="11dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="31dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="17dp"
                android:layout_width="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowright"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearRowarrowrightOne"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearRowfirrsettings"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.94"
                android:layout_width="0dp" android:orientation="horizontal">
                <ImageView android:id="@+id/imageFirrsettings"
                    android:layout_height="19dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_firrsettings"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_firrsettings"/>

                <TextView
                    android:id="@+id/txtSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.78"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="true"
                    android:text="Settings"
                    tools:ignore="NestedWeights,TextSizeCheck" />
            </LinearLayout>
            <ImageView android:id="@+id/imageArrowrightOne"
                android:layout_height="11dp"
                android:layout_marginBottom="22dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="19dp"
                android:layout_width="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowright"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearRowarrowrightTwo"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearRowlocation"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="17dp"
                android:layout_weight="0.94"
                android:layout_width="0dp" android:orientation="horizontal">
                <ImageView android:id="@+id/imageLocation"
                    android:layout_height="17dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/qr_scan"
                    tools:ignore="ContentDescription" tools:src="@drawable/qr_scan"/>

                <TextView
                    android:id="@+id/txtMyLikes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_weight="0.77"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="true"
                    android:text="Riwayat Scan"
                    tools:ignore="NestedWeights,TextSizeCheck" />
            </LinearLayout>
            <ImageView android:id="@+id/imageArrowrightTwo"
                android:layout_height="11dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="21dp"
                android:layout_width="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowright"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearRowarrowrightThree"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearRowtrash"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.96"
                android:layout_width="0dp" android:orientation="horizontal">
                <ImageView android:id="@+id/imageTrash"
                    android:layout_height="19dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_trash"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_trash"/>

                <TextView
                    android:id="@+id/txtHapusAkun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.85"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="true"
                    android:text="Hapus Akun"
                    tools:ignore="NestedWeights,TextSizeCheck" />
            </LinearLayout>
            <ImageView android:id="@+id/imageArrowrightThree"
                android:layout_height="11dp"
                android:layout_marginBottom="21dp"
                android:layout_marginEnd="31dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="20dp"
                android:layout_width="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowright"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright"/>
        </LinearLayout>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowfirrsignout"
            android:layout_height="wrap_content"
            android:layout_marginEnd="38dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView android:id="@+id/imageFirrsignout"
                android:layout_height="13dp"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_firrsignout"
                tools:ignore="ContentDescription" tools:src="@drawable/img_firrsignout"/>

            <TextView
                android:id="@+id/txtLogout"
                android:layout_width="0dp"
                android:textColor="@color/holo_red_dark"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="152dp"
                android:layout_marginBottom="9dp"
                android:layout_weight="0.78"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:singleLine="true"
                android:text="Logout"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>